{
  "$schema": "./node_modules/@stryker-mutator/core/schema/stryker-schema.json",
  "_comment": "This config was generated using 'stryker init'. Please see the guide for more information: https://stryker-mutator.io/docs/stryker-js/guides/angular",
  "mutate": [
    "src/app/app.component.ts",
    "!src/**/*.spec.ts",
    "!src/test.ts",
    "!src/environments/*.ts",
    "!src/**/*.module.ts",
    "!main.ts",
    "!cypress/**"
  ],
  "testRunner": "karma",
  "karma": {
    "configFile": "karma.conf.js",
    "projectType": "angular-cli",
    "config": {
      "browsers": [
        "ChromeHeadless"
      ]
    }
  },
  "reporters": [
    "progress",
    "clear-text",
    "html"
  ],
  "htmlReporter": { "fileName": "reports/mutation/mutation.app.html" },
  "concurrency": 2,
  "concurrency_comment": "Recommended to use about half of your available cores when running stryker with angular",
  "coverageAnalysis": "perTest",
  "timeoutFactor": 40,
  "checkers": ["typescript"],
  "fileLogLevel": "info",
  "tsconfigFile": "tsconfig.stryker.json",
  "tempDirName": "stryker-tmp",
  "inPlace": true
}
